          ]
        },
        "sendBody": true,
        "contentType": "json",
        "bodyParameters": {},
        "jsonParameters": true,
        "bodyParametersJson": "={{ $json }}",
        "options": {
          "response": {
            "response": {
              "neverError": true
            }
          }
        }
      },
      "id": "send-to-nexus",
      "name": "Enviar para Nexus Backend",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [910, 300]
    }
